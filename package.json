{
	"name": "uccommon",
	"version": "0.5.31",
	"description": "Common Lib used by most UCConnect Services",
	"main": "index.js",
	"scripts": {
		"check": "npx madge --circular --extensions ts --exclude \"\\.d\\.ts$|globals|dist\" ./",
		"clean": "npx rimraf dist",
		"test": "npx jest",
		"lint": "eslint --cache --fix -c .eslintrc.precommit.js lib/**/*.{js,ts,tsx}",
		"lintclear": "del /s .eslintcache",
		"relint": "run-s clean lintclear lint",
		"lintnocache": "eslint --fix -c .eslintrc.precommit.js lib/**/*.{js,ts,tsx}",
		"precommit": "run-p lint check test",
		"prepare": "husky install"
	},
	"lint-staged": {
		"lib/**/*.{js,ts,tsx}": [
			"eslint --cache --fix -c .eslintrc.precommit.js"
		]
	},
	"browser": {
		"./browser/wrapperjs.js": "./browser/fs.js"
	},
	"repository": {
		"type": "git",
		"url": "https://bitbucket.org/estosnet/com_nodeservice-common"
	},
	"author": "estos GmbH",
	"license": "MIT",
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^5.31.0",
		"@typescript-eslint/parser": "^5.31.0",
		"eslint": "^8.21.0",
		"eslint-config-standard": "^17.0.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-jest": "^26.7.0",
		"eslint-plugin-jsdoc": "^39.3.4",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-promise": "^6.0.0",
		"eslint-plugin-tsdoc": "^0.2.16",
		"husky": "^8.0.1",
		"jest": "^28.1.3",
		"lint-staged": "^13.0.3",
		"npm-run-all": "^4.1.5"
	},
	"dependencies": {
		"abort-controller": "^3.0.0",
		"atob": "^2.1.2",
		"buffer": "^6.0.3",
		"crypto-js": "^4.1.1",
		"jest-fetch-mock": "^3.0.3",
		"jose": "^4.8.3",
		"node-fetch": "^2.6.5",
		"ws": "^7.5.9"
	},
	"jest": {
		"collectCoverage": true,
		"collectCoverageFrom": [
			"lib/*.{js,jsx}",
			"lib/authentications/ntlm/*.{js,jsx}"
		],
		"modulePathIgnorePatterns": [
			"node_modules",
			"coverage"
		],
		"testPathIgnorePatterns": [
			"lib/authentications/ntlm/datatypes.js",
			"lib/authentications/ntlm/errors.js"
		],
		"coverageDirectory": "coverage",
		"automock": false,
		"resetMocks": false,
		"setupFiles": [
			"./test/setupJest.support.js"
		]
	}
}